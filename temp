*TEST STUFF PROBS NOT NEEDED AT LL*
package uk.ac.ed.bikerental;

import java.time.LocalDate;
import java.util.Scanner;

public class CalcBikeValue {

    public static void main(String[] args) {
        //2 options of price valuation
        LinearDepreciation linearDep = new LinearDepreciation();
        DoubleDecline ddDep = new DoubleDecline();
        
        
        //test date bike bough by store object
        LocalDate dateNew = LocalDate.of(2017,1,1);
        //test bike object
        Bike bike1 = new Bike();
        
        Scanner scan = new Scanner(System.in);
        int option;
        
        //test different options with test bike and test date
        do {
            //ask for option
            System.out.println("Choose an option:\n"
                    + "1. Linear deprication\n"
                    + "2. Double decline balance deprication");
            option = scan.nextInt();
            
            if(option==1) { //linear
                linearDep.calculateValue(bike1, dateNew);
            } else if(option==2) { //double decline
                ddDep.calculateValue(bike1, dateNew);
            } else {
                System.out.println("-\nPlease choose a valid option: 1 or 2\n-");
            }
        } while(option!=1 && option!=2);
        
    }

}
